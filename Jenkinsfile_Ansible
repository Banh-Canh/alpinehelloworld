pipeline {
        agent none
	stages {
		stage('Build image') {
			agent { 
				docker {
						image 'registry.gitlab.com/robconnolly/docker-ansible:latest' 
				} 
			}
			steps {
				script {
					sh '''
						cd ansible
						ansible-playbook -i prod.yml install-docker.yml
						ansible-playbook -i prod.yml alpinehelloworld.yml
					'''
				}
			}
		}
	}
}
